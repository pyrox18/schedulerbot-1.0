{
  "name": "scheduler-discord",
  "version": "0.5.0",
  "description": "A Discord bot for scheduling events",
  "main": "build/app.js",
  "scripts": {
    "gulp": "gulp",
    "build": "gulp build",
    "start": "nodemon --inspect=5858 build/app.js --ignore data/",
    "watch": "concurrently --kill-others \"gulp watch\" \"npm start\"",
    "postinstall": "mv src/config/bot-example.config.json src/config/bot.config.json"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/pyrox18/scheduler-discord.git"
  },
  "author": "Pyrox",
