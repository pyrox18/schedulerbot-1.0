  "bugs": {
    "url": "https://gitlab.com/pyrox18/scheduler-discord/issues"
  },
  "homepage": "https://gitlab.com/pyrox18/scheduler-discord#README",
  "dependencies": {
    "chrono-node": "^1.3.5",
    "eris": "^0.7.2",
    "fuzzyset.js": "0.0.3",
    "moment-timezone": "^0.5.13",
    "mongoose": "^4.11.13",
    "node-schedule": "^1.2.5",
    "winston": "^2.3.1",
    "winston-mongodb": "^3.0.1"
  },
  "devDependencies": {
    "@types/moment-timezone": "^0.5.0",
    "@types/mongoose": "^4.7.23",
    "@types/node": "^8.0.31",
    "@types/node-schedule": "^1.2.0",
    "@types/winston": "^2.3.6",
    "concurrently": "^3.5.0",
